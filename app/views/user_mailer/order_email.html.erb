<h1> thank you </h1>

<div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order_total = 0 %>
        <% @order.line_items.each do |details| %>
            <% quantity = details['quantity'].to_i %>
            <% if product = details.product %>
                <% item_total = product.price * quantity %>
                <% @order_total += item_total %>
                <tr>
                    <td>
                    <%= image_tag details.product.image.tiny %>
                    </td>
                    <td>
                    <h4><%= details.product.name %></h4>
                    <br>
                    <p><%= details.product.description %></p>
                    </td>
                    <td>
                    <%= details.product.price %>
                    </td>
                    <td>
                    <%= quantity %>
                    </td>
                    <td>
                    <%= item_total %>
                    </td>
                </tr>
            <% end %>
        <% end %>
        </tbody>
        <tfoot>
            <tr>
            <th colspan="4">
                TOTAL:
            </th>
            <th>
                <%= @order_total %>
            </th>
            </tr>
        </tfoot>
    </table>
</div>
