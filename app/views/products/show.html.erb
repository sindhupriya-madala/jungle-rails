<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
      <div class="col-sm-8">
        <div class="row">
        <% if current_user %>
        <div class="col-sm-6 col-sm-offset-1">
          <%= form_for [@product, @review] do |form| %>
            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.label :rating %>
              <%= form.select :rating, (1..5) %>
            </div>

            <%= form.submit 'Create Review', class: 'btn btn-primary' %>
          <% end %>
        </div>
        <% end %>
      </div>
        <% @product.reviews.reverse_order.each do |review| %>
          <dl class="dl-horizontal">
            <dt>Description</dt>
            <dd><%= review.description %></dd>
            <dt>Rating</dt>
            <dd><%= review.rating %></dd>
           <% if review.user == current_user %>
              <%= link_to fa_icon('trash'), review_path(review), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
            <% end %>
            </td>
          </dl>
        <% end %>
      </div>
    </div>

  </article>

</section>